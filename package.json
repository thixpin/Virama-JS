{
  "name": "virama-js",
  "version": "1.0.1",
  "description": "Another default myanmar font detector and Zawgyi <=> Unicode Converter for nodejs.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "start": "npm run dev && concurrently \"http-server -a localhost -p 129 -c1 -o http://localhost:129/test/index.html\" ",
    "dev": "webpack --mode development ./lib/virama.js --output ./dist/virama.js",
    "build": "webpack --mode production  ./lib/virama.js --output ./dist/virama.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thixpin/Virama-JS.git"
  },
  "engines": {
    "node": ">= 6.9.0"
  },
  "keywords": [
    "font-detector",
    "myanmar-font",
    "text-converter",
    "zawgyi-unicode-converter",
    "myanmar-font-converter"
  ],
  "author": "thixpin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thixpin/Virama-JS/issues"
  },
  "homepage": "https://github.com/thixpin/Virama-JS#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "http-server": "^0.11.1",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2"
  }
}
